<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:orientation="vertical"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="24dp"
			android:text="@string/tv_convert"
			/>

		<EditText
			android:id="@+id/et_temperature"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="@string/temperature_hint"
			/>
	</LinearLayout>


	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>


			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_from"
				/>

			<RadioGroup
				android:id="@+id/rg_source"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<RadioButton
					android:id="@+id/rb_source_celsius"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_celsius"
					/>

				<RadioButton
					android:id="@+id/rb_source_fahrenheit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_fahrenheit"
					/>

				<RadioButton
					android:id="@+id/rb_source_kelvin"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_kelvin"
					/>

				<RadioButton
					android:id="@+id/rb_source_rankine"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_rankine"
					/>
			</RadioGroup>
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/tv_to"
				/>

			<RadioGroup
				android:id="@+id/rg_target"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				>

				<RadioButton
					android:id="@+id/rb_target_celsius"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_celsius"
					/>

				<RadioButton
					android:id="@+id/rb_target_fahrenheit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_fahrenheit"
					/>

				<RadioButton
					android:id="@+id/rb_target_kelvin"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_kelvin"
					/>

				<RadioButton
					android:id="@+id/rb_target_rankine"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rb_rankine"
					/>

			</RadioGroup>
		</LinearLayout>
	</LinearLayout>

	<Button
		android:id="@+id/btn_convert"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/btn_convert"
		/>

	<TextView
		android:id="@+id/tv_result"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>

	<TextView
		android:id="@+id/tv_formula"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		/>
</LinearLayout>